<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/trailer_tv"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:gravity="center"
        android:layout_marginBottom="@dimen/margin_sub"
        android:layout_marginEnd="@dimen/margin_sub"
        android:layout_marginLeft="@dimen/margin_sub"
        android:layout_marginRight="@dimen/margin_sub"
        android:layout_marginStart="@dimen/margin_sub"
        android:layout_marginTop="@dimen/margin_sub"/>

    <ImageView
        android:id="@+id/trailer_iv"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_marginBottom="@dimen/margin_sub"
        android:layout_marginEnd="@dimen/margin_sub"
        android:layout_marginLeft="@dimen/margin_sub"
        android:layout_marginRight="@dimen/margin_sub"
        android:layout_marginStart="@dimen/margin_sub"
        android:layout_marginTop="@dimen/margin_sub"/>

</FrameLayout>